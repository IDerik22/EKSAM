Veebirakenduse Back-End

<?php
session_start();

// Check if the user is logged in
if (!isset($_SESSION['admin_logged_in'])) {
    // If not, show the login form
    if ($_SERVER['REQUEST_METHOD'] == 'POST') {
        $password = $_POST['password'];
        if ($password == 'admin_password') {
            $_SESSION['admin_logged_in'] = true;
            header('Location: admin.php');
        } else {
            echo "Vale parool!";
        }
    } else {
        echo '<form method="post">
                <label for="password">Parool:</label>
                <input type="password" id="password" name="password">
                <button type="submit">Logi sisse</button>
              </form>';
    }
    exit;
}

// Fetch competitors from the database
$mysqli = new mysqli("localhost", "root", "root_password", "your_database");
$result = $mysqli->query("SELECT * FROM competitors");

echo '<h2>Võistlejate nimekiri</h2>';
echo '<table><tr><th>Eesnimi</th><th>Perekonnanimi</th><th>Võistlusklass</th><th>Email</th><th>Toimingud</th></tr>';

while

